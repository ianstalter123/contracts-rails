<h1>Customer List</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Address</th>
  </tr>

  <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.name %></td>
      <td><%= customer.address %></td>
      <td><%= link_to 'Show', customer_path(customer) %></td>
      <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
    </tr>
  <% end %>
</table>
<%= paginate @customers %>
